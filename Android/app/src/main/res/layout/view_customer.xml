<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/old_copper_blue1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="202dp"
        android:layout_height="68dp"
        android:text="Farfetch"
        android:textAllCaps="true"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="137dp"
        android:layout_height="31dp"
        android:text="Representant:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="180dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="192dp"
        android:layout_height="31dp"
        android:text="Sr. Abílio Rosas"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        tools:layout_editor_absoluteX="169dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="137dp"
        android:layout_height="31dp"
        android:text="Address:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="211dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="76dp"
        android:layout_height="31dp"
        android:text="E-mail:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="240dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="137dp"
        android:layout_height="31dp"
        android:text="Phone:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="271dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:text="Tax No:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="302dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="231dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:singleLine="false"
        android:text="farfetch@farfetch.com"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        tools:layout_editor_absoluteX="94dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="Rua dos Campos Elísios, Nr 338"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
        tools:layout_editor_absoluteX="108dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:text="+351931999313"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        tools:layout_editor_absoluteX="94dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="235486479"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
        tools:layout_editor_absoluteX="109dp" />

    <Button
        android:id="@+id/Meetings"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:background="@color/buttonsColor"
        android:text="Meetings"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="361dp"
        android:layout_height="40dp"
        android:background="@color/buttonsColor"
        android:text="Sales History"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Meetings" />

    <Button
        android:id="@+id/button4"
        android:layout_width="361dp"
        android:layout_height="53dp"
        android:background="@color/buttonsColor"
        android:text="Orders"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</android.support.constraint.ConstraintLayout>